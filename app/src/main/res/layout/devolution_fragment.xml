<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_devolution_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="Pesquisa de Locações"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_client_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_devolution_title"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="14dp"
        android:text="Nome do Cliente:"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_client_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_client_search"
        android:padding="10dp" />

    <com.github.clans.fab.FloatingActionButton
        android:id="@+id/bt_client_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="12dp"
        android:src="@drawable/fab_search"
        app:fab_colorNormal="@color/ColorPrimary"
        app:fab_colorPressed="@color/ColorPrimary"
        app:fab_colorRipple="#FFFFFF"
        app:fab_showShadow="true">
        </com.github.clans.fab.FloatingActionButton>
</RelativeLayout>